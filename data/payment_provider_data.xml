<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_provider_smilepay" model="payment.provider">
        <field name="name">SmilePay (速買配)</field>
        <field name="code">smilepay</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="state">disabled</field>
        <field name="is_published">Ture</field>
        <field name="allow_tokenization">False</field>
        <field name="capture_manually">False</field>
        <field name="allow_express_checkout">False</field>
        <field name="available_currency_ids" eval="[(6, 0, [ref('base.TWD')])]"/>
        <field name="payment_method_ids" eval="[(4, 0, [ref('payment_smilepay.payment_method_smilepay_atm')]), (4, 0, [ref('payment_smilepay.payment_method_smilepay_barcode')]), (4, 0, [ref('payment_smilepay.payment_method_smilepay_ibon')]), (4, 0, [ref('payment_smilepay.payment_method_smilepay_famiport')])]"/>
    </record>

</odoo>